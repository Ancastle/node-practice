extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")
    
block content
    main
        if products.length > 0
            .grid
                each product in products
                    article.card.product-item
                        header.card_header
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://e7.pngegg.com/pngimages/700/476/png-clipart-man-holding-bazooka-illustration-resident-evil-4-resident-evil-2-resident-evil-6-resident-evil-5-leon-game-video-game.png", alt="residentevil")
                        .card__content  
                            h2.product__price $19.99
                            p.product__description A very good game about zombies 
                        .card__actions 
                            button.btn Add to Cart
        else
            h1 No Products